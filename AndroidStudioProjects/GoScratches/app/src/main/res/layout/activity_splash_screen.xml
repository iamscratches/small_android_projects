<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@drawable/goscratches"
    android:padding="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to"
                android:textAlignment="center"
                android:textColor="#384BC8"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Go Scratches"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- collect cherry miles as you go along visiting new cities"
                android:textColor="@color/teal_200"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Remember to spent some time to collect cherry miles"
                android:textColor="@color/teal_200"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Don't forget to collect super cherries to collect extra miles"
                android:textColor="@color/teal_200"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Now have fun visiting new places everyday and socialising."
                android:textColor="@color/teal_200"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>